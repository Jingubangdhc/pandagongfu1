# 数据库配置
# 如果使用Supabase，格式如下：
# DATABASE_URL="postgresql://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT-REF].supabase.co:5432/postgres"
# 如果使用SQLite（开发测试），格式如下：
DATABASE_URL="file:./dev.db"

# JWT密钥
JWT_SECRET="your-super-secret-jwt-key-here"

# 网站基础URL
NEXT_PUBLIC_BASE_URL="http://localhost:3000"

# 文件上传配置
UPLOAD_DIR="./uploads"
MAX_FILE_SIZE="100MB"

# 支付配置
# Stripe
STRIPE_PUBLIC_KEY="pk_test_..."
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."

# 支付宝
ALIPAY_APP_ID="your_alipay_app_id"
ALIPAY_PRIVATE_KEY="your_alipay_private_key"
ALIPAY_PUBLIC_KEY="your_alipay_public_key"

# 微信支付
WECHAT_APP_ID="your_wechat_app_id"
WECHAT_MCH_ID="your_wechat_mch_id"
WECHAT_API_KEY="your_wechat_api_key"

# 邮件配置
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-email-password"

# 云存储配置 (可选)
# AWS S3
AWS_ACCESS_KEY_ID="your_aws_access_key"
AWS_SECRET_ACCESS_KEY="your_aws_secret_key"
AWS_REGION="us-east-1"
AWS_BUCKET_NAME="your-bucket-name"

# 阿里云OSS
ALIYUN_ACCESS_KEY_ID="your_aliyun_access_key"
ALIYUN_ACCESS_KEY_SECRET="your_aliyun_secret_key"
ALIYUN_REGION="oss-cn-hangzhou"
ALIYUN_BUCKET="your-bucket-name"

# Redis配置 (可选，用于缓存)
REDIS_URL="redis://localhost:6379"

# 系统配置
NODE_ENV="development"
PORT="3000"

# 佣金配置
DEFAULT_COMMISSION_RATE_L1="0.15"  # 一级佣金比例 15%
DEFAULT_COMMISSION_RATE_L2="0.05"  # 二级佣金比例 5%
MIN_WITHDRAWAL_AMOUNT="100"        # 最小提现金额
WITHDRAWAL_FEE_RATE="0.01"         # 提现手续费比例 1%
